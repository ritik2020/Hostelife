<script type="text/javascript">
(function(){
	if(window.localStorage.getItem('hostelIds')!=null) {
		let idsArray = JSON.parse(window.localStorage.getItem('hostelIds'));
		let form = document.getElementById("likedHostels");
		for(let i=0; i<idsArray.length; i++) {
			let temp = document.createElement("input");
			temp.type = "text";
			temp.hidden = true;
			temp.value = idsArray[i];
			temp.readOnly = true;
			temp.name = `id${i}`;
			form.appendChild(temp);
		}
	}
})();

function submitLikedHostelsForm(){
	if(window.localStorage.getItem('hostelIds')!=null){
		document.getElementById("likedHostels").submit();
	}
	else {
		alert("You don't liked any hostel yet!");
	}
}
</script>
</html>