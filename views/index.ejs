        <input type="submit" name="Submit" class="pointer">
     </form>
    </div>
</div>


  <div class="social-icons">
      <div class="facebook pointer">
         <i class="fab fa-facebook" style="color: #3b5998;"></i>
     </div>
     
      <div class="twitter pointer">
         <i class="fab fa-twitter" style="color: white;"></i>
      </div>

      <div class="instagram pointer">
        <i class="fab fa-instagram"></i>
